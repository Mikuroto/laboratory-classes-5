<div class="card">
  <img
    class="card__image"
    src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?v=1530129081?text=<%= product.name %>"
    alt="<%= product.name %>"
  />
  <h3 class="card__title"><%= product.name %></h3>
  <p class="card_description"><%= product.description %></p>
  <% if (typeof product.price !== 'undefined') { %>
  <p class="card_price">Price: <%= product.price.toFixed(2) %> PLN</p>
  <% } %>

  <a href="/products/<%= product.name %>" class="button button--details"
    >Details</a
  >
  <button
    class="button button--delete"
    onclick="deleteProduct('<%= product.name %>')"
  >
    Delete
  </button>
</div>

<style>
  .card .button {
    width: auto;
    display: inline-block;
    margin: 0.5rem 0.2rem;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
  }
  .button--details {
    background-color: #2196f3;
  }
  .button--details:hover {
    background-color: #1976d2;
  }
  .button--delete {
    background-color: #f44336;
  }
  .button--delete:hover {
    background-color: #d32f2f;
  }
</style>
